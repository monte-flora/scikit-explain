[MASTER]
# Python code to execute, usually for sys.path manipulation such as pygtk.require().
init-hook='import sys; sys.path.append(".")'

# Use multiple processes to speed up Pylint
jobs=4

# Allow loading of arbitrary C extensions
unsafe-load-any-extension=no

[MESSAGES CONTROL]
# Disable the following checks:
# C0103: Invalid name (too strict for scientific computing)
# C0114: Missing module docstring
# C0115: Missing class docstring
# C0116: Missing function docstring
# R0913: Too many arguments (common in ML code)
# R0914: Too many local variables (common in ML code)
# R0915: Too many statements (common in data processing)
# W0212: Access to a protected member (common in scientific Python)
# W0621: Redefining name from outer scope
# W0511: TODO/FIXME comments
# E1101: Module has no member (false positives with numpy/pandas)
# I1101: Module has no member (false positives)
disable=C0103,C0114,C0115,C0116,R0913,R0914,R0915,W0212,W0621,W0511,E1101,I1101

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

# Maximum number of lines in a module
max-module-lines=3000

# String used for indentation
indent-string='    '

[BASIC]
# Good variable names (allow single letter for scientific computing)
good-names=i,j,k,n,x,y,X,Y,f,ax,df,_,ix

[DESIGN]
# Maximum number of arguments for function/method
max-args=10

# Maximum number of locals for function/method body
max-locals=25

# Maximum number of return/yield for function/method body
max-returns=10

# Maximum number of branch for function/method body
max-branches=20

# Maximum number of statements in function/method body
max-statements=75

# Maximum number of attributes for a class
max-attributes=15

[IMPORTS]
# Allow wildcard imports from typing
allow-wildcard-with-all=yes

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=10

# Ignore imports when computing similarities
ignore-imports=yes

[TYPECHECK]
# List of members which are set dynamically and missed by pylint inference
generated-members=numpy.*,pandas.*,sklearn.*,xarray.*

# List of classes names for which member attributes should not be checked
ignored-classes=numpy,pandas,sklearn,xarray,matplotlib

[REPORTS]
# Set to yes to enable reports
reports=no

# Template for the output
output-format=colorized
